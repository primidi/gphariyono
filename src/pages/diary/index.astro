---
import Layout from '../../layouts/Layout.astro'
import { getCollection, type CollectionEntry } from 'astro:content'

const entries = (
  (await getCollection('diary')) as CollectionEntry<'diary'>[]
).sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())

const formatDate = (date: Date) => {
  return new Intl.DateTimeFormat('en-US', {
    month: 'short',
    day: 'numeric',
    weekday: 'short'
  }).format(date)
}
---

<Layout
  title="GPH // Diary"
  description="Fragments of thought, daily observations, and moods."
>
  <div class="max-w-3xl mx-auto flex flex-col gap-24">
    <header class="text-center">
      <h1 class="text-4xl md:text-6xl font-black tracking-tighter text-mist/20">
        FRAGMENTS
      </h1>
    </header>

    <div
      class="relative border-l border-mist/10 ml-8 md:ml-0 pl-8 md:pl-16 space-y-24"
    >
      {
        entries.map(entry => (
          <div class="relative">
            <div class="absolute -left-[3.25rem] md:-left-[4.25rem] top-2 w-3 h-3 rounded-full bg-mist/20 border border-void" />

            <a href={`/diary/${entry.slug}`} class="group flex flex-col gap-4">
              <div class="flex flex-col md:flex-row md:items-baseline gap-4">
                <span class="font-mono text-sm text-accent">
                  {formatDate(entry.data.date)}
                </span>
                <h2 class="text-2xl font-bold tracking-tight group-hover:text-white text-mist/80 transition-colors">
                  {entry.data.title}
                </h2>
              </div>
              <div class="text-sm font-mono text-mist/40">
                {entry.data.mood}{' '}
                {entry.data.location && `// ${entry.data.location}`}
              </div>
            </a>
          </div>
        ))
      }
    </div>
  </div>
</Layout>
